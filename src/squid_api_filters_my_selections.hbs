<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
        <h4 class="modal-title">My Selections</h4>
    </div>
    <div class="modal-body">
        <div class="search input-group" style="margin: 10px 0 10px 0">
            <span class="input-group-addon">
                <i id="selections-search-in-progress" class="glyphicon glyphicon-refresh glyphicon-spin hidden"></i>
                <i id="selections-search-not-in-progress" class="glyphicon glyphicon-search"></i>
            </span>
            <input id="selections-searchbox" class="form-control search" placeholder="Search" value="{{searchTerm}}" type="text" autofocus>
        </div>
        <div class="results min-filter-height filter-selections">
            <ul class="list-group">
                {{#each selections}}
                <li class="list-group-item my-selection" data-id="{{id.myBookmarkSelectionId}}">
                    <span class="glyphicon glyphicon-edit selection-rename selection-view-control" aria-hidden="true"></span>
                    <span class="my-selection-name selection-view-control">{{name}}</span>
                    <span class="glyphicon glyphicon-trash selection-remove selection-view-control" aria-hidden="true"></span>
                    <span class="glyphicon glyphicon-pencil selection-update selection-view-control" aria-hidden="true"></span>

                    <span class="glyphicon glyphicon-ok selection-rename-ok selection-rename-control" aria-hidden="true" style="display:none;"></span>
                    <span class="glyphicon glyphicon-remove selection-rename-cancel selection-rename-control" aria-hidden="true" style="display:none;"></span>
                    <input class="my-selection-name-rename selection-rename-control" type="text" value="{{name}}" style="display:none;">
                </li>
                {{/each}}
            </ul>
        </div>
        <div class="row">
            <div class="form-group col-md-9">
                <input type="text" id="new-selection" class="form-control" placeholder="Selection's name">
            </div>
            <div class="col-md-3">
                <button id="create-selection" type="button" class="btn btn-default" disabled>Create</button>
            </div>
        </div>
        <div class="row" style="margin-left: 15px;">{{message}}</div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
    </div>
</div>